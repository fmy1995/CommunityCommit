<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <h3 class="text-center bg-light"><strong><%= @post.title %></strong></h3>
    </div>
  </div>
  
  <div class="row make">
    <div class="col-5">
      <table class="table table-borderless">
        <tr>
          <td><h5><strong>投稿日時</strong></h5></td>
          <td><h5><strong><%= @post.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M:%S') %></strong></h5></td>
        </tr>
      </table>
    </div>
  </div>  
 
<div class="row">
 <div class="col-9">
   <table class="table table-bordered">
    <tbody>
      <tr>
       <th class="bg-light">タイトル</th>
       <td><%= @post.title %></td>
      </tr>
      <tr>
       <th class="bg-light">掲示場所</th>
       <td>
    <% if @post.in_front == true %>
      <i class="fas fa-bullseye red"></i>トップに掲示中
    <% elsif @post.in_front == false %>
      <i class="fas fa-bullseye blue"></i>掲示板のみ掲示中
    <% end %>
      </td>
     </tr> 
      </tbody>
    </table>

 <div><%= @post.post_text %></div>

    <%= attachment_image_tag @post, :image, size: "300x300" %>
    
   </div> 
 </div>
 
 <% @post.post_comments.each do |post_comment| %>
 <table>
  <tr>
  	<td><%= post_comment.user.name %></td>
  	<td><%= post_comment.comment %></td>
  	<% if current_user == post_comment.user %>
    	<td><%= link_to 'Destroy', users_community_post_post_comment_path(post_id: @post.id, id: post_comment.id), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
  	<% end %>
  </tr>
</table>
<% end %>
 
 
  <table class=" mt-5">
  <tr>
   <td>
  <%= form_with model:[@post,@post_comment], url: users_community_post_post_comments_path(post_id: @post.id), mthod: :post, local:true do |f| %>
   <%= f.text_area :comment, size:"60x2" %></td>
  <td><%= f.submit 'コメントを送信', class: "btn btn-success" %></td>
  <% end %>
   </tr>
</table>
 
<%= link_to "コミュニティトップに戻る", users_community_path, class: 'btn btn-info' %>
</div>