 <div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <h3 class="text-center bg-light"><strong>＜掲示板＞お知らせ一覧</strong></h3>
    </div>
  </div>
   
   <table class="table table-bordered">
    <tbody>
     <tr> 
      <% @posts.each do |post| %>
      <td><%= link_to users_community_post_path(community_id: post.community_id, id: post.id) do %><%= post.title %><% end %></td>
      <td><%= post.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M:%S') %></td>
      <% end %>
     </tr>
    </tbody>
   </table>
    
</div>