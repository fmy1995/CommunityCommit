<div class="row">
  <div class="col">
      <h3><strong>新規登録</strong></h3>

  <div class="mx-auto">
        <%= form_with model: @community, url: admins_communities_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, "コミュニティ名" %>
          <%= f.text_field :name, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :introduction, '概要説明' %>
          <%= f.text_area :introduction, size:"90x5", class: 'form-control' %>
        </div>
        <div class="form-group text-center">
          <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
