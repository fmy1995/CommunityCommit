<div class="container">
  <div class="row">
    <div class="col-4">
      <h3 class="bg-light m-5"><strong>コミュニティ編集</strong></h3>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
        <%= form_with model: @community, url: admins_community_path, local: true do |f| %>

        <div class="form-group">
          <%= f.label :name, "コミュニティ名" %>
          <%= f.text_field :name, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :introduction, '概要説明' %>
          <%= f.text_field :introduction, class: 'form-control' %>
        </div>
        <div class="form-group text-center">
          <%= f.submit '変更を保存',class: 'btn btn-success' %>
        </div>
        <% end %>
    </div>
  </div>
</div>