<% if @community.admin == current_admin %>
<div class="row">
  <div class="col">
     <h3><strong>コミュニティ編集</strong></h3>

 <%= form_with model: @community, url: admins_community_path, local: true do |f| %>
   <div class="form-group">
     <%= f.label :name, "コミュニティ名" %>
  　  <%= f.text_field :name, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :introduction, '概要説明' %>
      <%= f.text_area :introduction, size:"90x5", class: 'form-control' %>
    </div>
    <div class="form-group text-center">
      <%= f.submit '変更を保存',class: 'btn btn-success' %>
     </div>
  <% end %>
        
　</div>
</div>
 <% else %>
 
 <div class = "text-center">
 <h3><strong>あなたが作成したコミュニティではありません</strong></h3></div>  
 
 <% end %> 