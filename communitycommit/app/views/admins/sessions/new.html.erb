<div class="row">
 <div class="col ">
<h3>管理者ログイン</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="px-5 py-2">
   <div class="row my-3">
    <div class="col-md-6">   
      <div class= "sing-in-label"><%= f.label :"メールアドレス" %></div>
      <div class= "sing-in-input"><%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"48" %></div>
    </div>      
   </div>

    <div class="row my-3">
     <div class="col-md-6"> 
      <div class= "sing-in-label"><%= f.label :"パスワード" %></div>
      <div class= "sing-in-input"><%= f.password_field :password, autocomplete: "current-password", :size=>"48" %></div>
     </div>      
    </div>
    
    <div class="actions row my-4 mt-5">
     <div class="col-md-6"> 
      <div class= "sing-in-label"></div>
      <div class= "sing-in-input"><%= f.submit "ログイン", class: "btn btn-warning btn-lg btn-block" %></div>
     </div>
    </div>      
   </div>
   
  <% end %>
    <div>
        <h5 class="pt-4">会員登録がお済みでない⽅は</h5>
        <div class="px-5 py-2"><h5><strong><%= link_to "こちら", new_admin_registration_path %></strong>からログインしてください。</h5></div>
    </div>
 </div>
</div>
