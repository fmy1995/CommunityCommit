
  <div class="row">
    <div class="col-md-5">
      <h3 class="text-center g-lightb"><strong>ユーザーページ[<%= @user.name %>]</strong></h3>
      <table class="table table-borderless">
        <tr>
          <td><h5><strong>登録情報</strong></h5></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-9">
      <table class="table table-bordered bg-light">
        <tbody>
          <tr>
            <th class="bg-light">氏名</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th class="bg-light">郵便番号</th>
            <td><%= @user.postal %></td>
          </tr>
          <tr>
            <th class="bg-light">住所</th>
            <td><%= @user.adress %></td>
          </tr>
          <tr>
            <th class="bg-light">電話番号</th>
            <td><%= @user.phone_number %></td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>